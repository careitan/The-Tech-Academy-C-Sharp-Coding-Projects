@model Insurance.Models.v_UserQuotes
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Get an insurance quote for your car</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Quote", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group col-md-5">
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="form-group col-md-5">
                        <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                    </div>
                    <div class="form-group col-md-5">
                        <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                    </div>
                    <div class="form-group col-md-5">
                        <input name="DOB" type="date" class="form-control" placeholder="" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-5">
                        <input name="Make" type="text" class="form-control" placeholder="Make of Car" />
                    </div>
                    <div class="form-group col-md-5">
                        <input name="Model" type="text" class="form-control" placeholder="Car Model" />
                    </div>
                    <div class="form-group col-md-5">
                        <input name="CarYear" type="number" class="form-control" placeholder="Model Year" />
                    </div>
                    <div></div>

                </div>
                <div class="row">
                    <div class="form-group col-md-5">
                        <label class="checkbox-inline"><input id="DUI" name="DUI" type="checkbox" value="false"/> Do you have a DUI?</label>
                    </div>
                    <div class="form-group col-md-5">
                        <input name="SpeedTickets" type="number" class="form-control" placeholder="How many speeding tickets?" />
                    </div>
                    <div class="form-group col-md-5">
                        <label class="checkbox-inline"><input id="IsFullCoverage" name="IsFullCoverage" type="checkbox" value="false"/> Would you like Full Coverage?</label>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>